@{
    Layout = "_Layout";
    ViewData["Title"] = "Specialties";
}
<h2>@ViewData["Title"]</h2>
<hr>

@if (@Model.Count == 0)
{
  <h3>No specialties have been added yet!</h3>
}

@foreach (var specialty in Model)
{
  <h3><a href="/specialties/@specialty._specialtyId">@specialty._specialtyName</a>
  <p>@specialty._specialtyPrice</p>
  </h3>
}

<br>
<p><a href='/specialties/new'>Add a new specialty</a></p>
<p><a href='/specialties/delete'>Delete all specialties</a></p>
