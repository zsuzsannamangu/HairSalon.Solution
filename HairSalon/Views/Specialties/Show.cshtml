@using HairSalon.Models;
@{
  Layout = "_Layout";
}


<h2>Specialty: @Model["selectedSpecialty"]._specialtyName</h2>
<hr />

@if (@Model["specialtyStylists"].Count != 0)
{
  <h4>Stylists that do these services:</h4>
  <ol>
    @foreach (Stylist stylist in @Model["specialtyStylists"])
    {
      <li>@stylist.GetStylistName()
      </li>
    }
  </ol>
}
<br>
<h4>Add a stylist to this specialty:</h4>

<form action='/specialties/@Model["selectedSpecialty"]._specialtyId/stylists/new' method='post'>
  <label for='stylistId'>Select a stylist</label>
  <select id='stylistId' name='stylistId' type='text'>
    @foreach (var stylist in @Model["allStylists"])
    {
      <option value='@stylist.GetId()'>@stylist.GetStylistName()</option>
    }
  </select>
  <button type='submit'>Add</button>
</form>
<br>
<h4>Delete this specialty:<a href="/specialties"> @Model["selectedSpecialty"]._specialtyName</a></h4>

<br>
<p><a href="/specialties">Return to the list of specialties</a></p>
