@{
  Layout = "_Layout";
}

<h3>Here are all the details of @Model["stylist"].GetStylistName():</h3>

<h4>@Model["stylist"].GetStylistName()</h4>
<p>@Model["stylist"].GetBio()</p>

<ol>
@foreach (var client in @Model["clients"])
{
  <li>Client Name: @client.GetClientName() <br>Phone Number: @client.GetPhone()</li>
  /* <li><a href='/stylists/@Model["stylist"].GetId()/clients/@client.GetId()'>@client.GetClientName()</a></li> */
}
</ol>

@if (@Model["stylistSpecialties"].Count != 0)
{
  <h4>This stylist does these services:</h4>
  <ul>
    @foreach (var specialty in @Model["stylistSpecialties"])
    {
      <li>@specialty._specialtyName, @specialty._specialtyPrice
      </li>
    }
  </ul>
}

<h4>Add a specialty to this stylist:</h4>

<form action='/stylists/@Model["stylist"].GetId()/specialties/new' method='post'>
  <label for='specialtyId'>Select a specialty</label>
  <select id='specialtyId' name='specialtyId' type='text'>

    @foreach (var specialty in @Model["allSpecialties"])
    {
      <option value='@specialty._specialtyId'>@specialty._specialtyName</option>
    }

  </select>
  <button type='submit'>Add</button>
</form>

<h4>Add a client to this stylist:</h4>

<form action='/stylists/@Model["stylist"].GetId()/clients/new' method='post'>
  <label for='clientName'>Client name</label>
  <input id='clientName' name='clientName' type='text'>
  <label for='clientPhone'>Client phone number</label>
  <input id='clientPhone' name='clientPhone' type='text'>
  <button type='submit'>Add client</button>
</form>

<p><a href='/stylists/@Model["stylist"].GetId()/clients/new'>Add a new client</a></p>
<p><a href='/stylists'>Return to stylist list</a></p>
<p><a href='/'>Return to Main Page</a></p>
