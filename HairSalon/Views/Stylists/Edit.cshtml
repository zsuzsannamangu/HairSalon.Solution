@{
  Layout = "_Layout";
}

<h1>Zsuzsi's Hair Salon</h1>
<hr>

<h3>Edit @Model["stylist"].GetStylistName()'s bio: @Model["stylist"].GetBio()</h3>

<form action="/stylists/@Model["stylist"].GetId()" method="post">
  <label for="newBio">Bio:</label>
  <input type="text" name="newBio" value="@Model["stylist"].GetBio()">
  <button type="submit">Edit</button>
</form>

<br>
<p><a href='/stylists/@Model["stylist"].GetId()'</a>Back to @Model["stylist"].GetStylistName()'s page</p>
