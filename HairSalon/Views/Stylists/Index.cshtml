@{
  Layout = "_Layout";
}

<h2>Stylists</h2>
<hr>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
}

@foreach (var stylist in Model)
{
  <h3><a href='/stylists/@stylist.GetId()'>@stylist.GetStylistName()</a></h3>
}

<br>
<form action= '/stylists/delete' method="post">
  <button type="submit" name="button"> Delete all stylists </button>
</form>

<br>
<a href='/stylists/new'>Add a new stylist</a>
