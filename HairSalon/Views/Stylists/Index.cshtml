@{
  Layout = "_Layout";
}

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
}

@foreach (var stylist in Model)
{
  <h3><a href='/stylists/@stylist.GetId()'>@stylist.GetStylistName()</a></h3>
}

<form action= '/stylists/delete' method="post">
  <button type="submit" name="button"> Delete all clients </button>
</form>

<p><a href='/'>Back home</a></p>
<p><a href='/stylists/new'>Add a new stylist</a></p>
